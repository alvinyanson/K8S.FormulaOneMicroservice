{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5400"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/drivers/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamPathTemplate": "/api/drivers/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "driver-api-srv",
          "Port": 8080
        }
      ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "FileCacheOptions": {
        "TtlSeconds": 60,
        "EnableContentHashing": true
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/achievement/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamPathTemplate": "/api/achievement/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "driver-achievement-api-srv",
          "Port": 8080
        }
      ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "FileCacheOptions": {
        "TtlSeconds": 60,
        "EnableContentHashing": true
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/driverstats/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/driverstats/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "driver-stat-api-srv",
          "Port": 8080
        }
      ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "FileCacheOptions": {
        "TtlSeconds": 60,
        "EnableContentHashing": true
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "60s",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    }
  ]
}
